@model List<Server.WeatherForecast>

@{
    ViewData["Title"] = "Weather Forecast";
}

<h2>Updated Weather Forecast</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temperature (°C)</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()  </td>
                <td>  @item.TemperatureC</td>
                <td>@item.Summary</td>
            </tr>
        }
    </tbody>
</table>
